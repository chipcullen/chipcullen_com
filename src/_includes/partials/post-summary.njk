<li class="post-summary">
  <time datetime="{{ post.data.date | postDateTime }}" class="post-summary__time">{{ post.data.date | postDate }}</time>
  <p class="post-summary__title"><a href="{{post.url}}">{{ post.data.title }}</a></p>
  {% if post.data.description %}
  <p class="post-summary__description">{{ post.data.description }}</p>
  {% endif %}
</li>
