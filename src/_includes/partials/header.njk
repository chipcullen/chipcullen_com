{% if showHomeLink == true %}
  {% set headerClass = 'header--home' %}
{% endif %}

<header class="{{ headerClass }}" data-header="data-header">
  {% if showHomeLink == true %}
    <h3 class="header__title">
      <a href="/">{{ metadata.title }}</a>
    </h3>
  {% endif %}
  <button class="header__menu-btn" hidden="true" data-btn="menu" aria-haspopup="true">Menu</button>
  <div data-menu-wrapper="data-menu-wrapper">
    <nav class="header__nav">
      <ul class="header__list">
        <li class="header__item">
          <a class="header__link" href="/" hidden="true" data-home-link="data-home-link">Home</a>
        </li>

        {% for page in collections.page %}
          <li class="header__item">
            <a class="header__link" href="{{ page.url }}">{{ page.data.pageTitle }}</a>
          </li>
        {% endfor %}

        {% for item in menudata %}
          <li class="header__item">
            <a class="header__link" href="{{ item.url }}">
              {{ item.title }}
              <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30">
                <use href="#{{ item.icon }}"/>
              </svg>
            </a>
          </li>
        {% endfor %}

      </ul>
    </nav>
  </div>
</header>
