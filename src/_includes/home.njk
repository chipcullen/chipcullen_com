{% extends "./layout.njk" %}

{% block content %}
  <header class="home-header">
    <h1 class="site-title">
      <a href="/">
      Chip Cullen
      </a>
    </h1>
    <h2 class="site-subtitle">mission driven<br />web developer</h2>

    <nav class="home-nav">
      <ul>
        <li><a href="{{ '/about/' | url }}">about</a></li>
        <li><a href="https://github.com/chipcullen">github</a></li>
        <li><a href="https://www.linkedin.com/in/chipcullen/">linkedin</a></li>
      </ul>
    </nav>

    <picture class="header-backdrop" aria-hidden="true">
      <source media="(max-width: 500px)"
          srcset="https://res.cloudinary.com/chipcullen/image/upload/b_rgb:000000,c_fill,g_north,h_548,o_98,w_500/v1669064957/dc-skyline-sketch-2-cropped_lv33es.webp 1x,
          https://res.cloudinary.com/chipcullen/image/upload/b_rgb:000000,c_fill,g_north,h_1096,o_99,w_1000/v1669064957/dc-skyline-sketch-2-cropped_lv33es.webp 2x">
      <source media="(max-width: 800px)"
          srcset="https://res.cloudinary.com/chipcullen/image/upload/b_rgb:000000,c_fill,g_north,h_548,o_98,w_800/v1669064957/dc-skyline-sketch-2-cropped_lv33es.webp 1x,
          https://res.cloudinary.com/chipcullen/image/upload/b_rgb:000000,c_fill,g_north,h_1096,o_99,w_1600/v1669064957/dc-skyline-sketch-2-cropped_lv33es.webp 2x">

      <img class=""
        src="https://res.cloudinary.com/chipcullen/image/upload/b_rgb:000000,c_fill,g_north,h_548,o_98,w_1369/v1669064957/dc-skyline-sketch-2-cropped_lv33es.webp"
        srcset="https://res.cloudinary.com/chipcullen/image/upload/b_rgb:000000,c_fill,g_north,h_548,o_98,w_1369/v1669064957/dc-skyline-sketch-2-cropped_lv33es.webp 1x,
          https://res.cloudinary.com/chipcullen/image/upload/b_rgb:000000,c_fill,g_north,h_1096,o_99,w_2738/v1669064957/dc-skyline-sketch-2-cropped_lv33es.webp 2x"
        loading="lazy"
        alt=""/>
    </picture>

  </header>

  <main>
    <h3>Blog Posts</h3>
    {# {{ collections.post | console | safe }} #}
    <ul class="blog-posts">
    {% for post in posts %}
      {% include "./partials/post-summary.njk" %}
    {% endfor %}
    </ul>

    <div class="pagination">
    {% if pagination.href.previous %}
      <a href="{{pagination.href.previous}}">Newer Posts</a>
    {% endif %}

      Page {{ pagination.pageNumber + 1 }} of {{pagination.pages.length }}

    {% if pagination.href.next %}
      <a href="{{pagination.href.next}}">Older Posts</a>
    {% endif %}
    </div>
  </main>
{% endblock %}
